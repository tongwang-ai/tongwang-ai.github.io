---
layout: default
---
<div class="post">

  <header class="post-header">
    <h1 class="post-title">
      {{ page.title }}
      {% if page.cv_pdf %}
        <a href="{{ '/assets/pdf/' | append: page.cv_pdf | relative_url }}"
           target="_blank"
           rel="noopener noreferrer"
           class="float-right">
          <i class="fas fa-file-pdf"></i>
        </a>
      {% endif %}
    </h1>
    <p class="post-description">{{ page.description }}</p>
  </header>

  <style>
    .pdf-container {
      width: 100%;
      height: 100vh;        /* full viewport height */
      overflow: auto;
      -webkit-overflow-scrolling: touch;
    }
    .pdf-frame {
      display: block;
      width: 100%;
      height: 100%;
      border: none;
    }
  </style>

  <div class="pdf-container">
    <iframe
      class="pdf-frame"
      src="{{ '/assets/pdf/' | append: page.cv_pdf | relative_url }}#view=FitH"
      title="{{ page.title }} CV PDF"
      allow="fullscreen">
    </iframe>
  </div>

</div>